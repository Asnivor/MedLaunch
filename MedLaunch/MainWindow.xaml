                                            <ContextMenu>
                                                <MenuItem Header="Enable/Disable" Click="MenuItemConfigEnable_Click" />
                                                <MenuItem Header="Reset to Defaults" Click="MenuItemDefault_Click"  />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                    </RadioButton>
                                    <RadioButton Margin="1" x:Name="btnConfigSnes_Faust" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" 
                                     Checked="btnConfig_Checked" Unchecked="btnConfig_Unchecked" ContextMenuService.ShowOnDisabled="True"
