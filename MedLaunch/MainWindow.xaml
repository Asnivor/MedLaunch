                                    <RadioButton Margin="1" x:Name="btnConfigPce" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" 
                                     Checked="btnConfig_Checked" Unchecked="btnConfig_Unchecked" ContextMenuService.ShowOnDisabled="True"
                                     CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}">
                                        NEC PC-Engine
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Enable/Disable" Click="MenuItemConfigEnable_Click" />
                                                <MenuItem Header="Reset to Defaults" Click="MenuItemDefault_Click"  />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                    </RadioButton>
                                    <RadioButton Margin="1" x:Name="btnConfigPce_Fast" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" 
                                     Checked="btnConfig_Checked" Unchecked="btnConfig_Unchecked" ContextMenuService.ShowOnDisabled="True"
                                     CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}">
                                        NEC PC-Engine (fast)
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Enable/Disable" Click="MenuItemConfigEnable_Click" />
                                                <MenuItem Header="Reset to Defaults" Click="MenuItemDefault_Click"  />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                    </RadioButton>
                                    <RadioButton Margin="1" x:Name="btnConfigVb" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" 
                                     Checked="btnConfig_Checked" Unchecked="btnConfig_Unchecked" ContextMenuService.ShowOnDisabled="True"
                                     CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}">
                                        Nintendo Virtual Boy
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Enable/Disable" Click="MenuItemConfigEnable_Click" />
                                                <MenuItem Header="Reset to Defaults" Click="MenuItemDefault_Click"  />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
