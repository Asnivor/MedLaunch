                                     CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}">
                                        NeoGeo Pocket Color
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Enable/Disable" Click="MenuItemConfigEnable_Click" />
                                                <MenuItem Header="Reset to Defaults" Click="MenuItemDefault_Click"  />
