                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                    </RadioButton>
                                    <RadioButton Margin="1" x:Name="btnConfigSnes" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" 
                                     Checked="btnConfig_Checked" Unchecked="btnConfig_Unchecked" ContextMenuService.ShowOnDisabled="True"
