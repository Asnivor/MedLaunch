<Controls:MetroWindow x:Class="MedLaunch.MainWindow" x:Name="MW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedLaunch"
                      xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
        
                      xmlns:diag="clr-namespace:System.Diagnostics;assembly=mscorlib"
                  
        
        mc:Ignorable="d"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="MedLaunch - Windows Front-End for Mednafen (0.0.3.1)" 
                      
                      BorderThickness="0" 
                      GlowBrush="Black"
                      ResizeMode="CanResizeWithGrip"
                        TitleCaps="False"
                      WindowTransitionsEnabled="False"
                      ShowIconOnTitleBar="True"
                      Closing="MW_Closing"
                      Height="800"
                      Width="1600"
                      WindowStartupLocation="CenterScreen" Loaded="MetroWindow_Loaded">

    <Window.CommandBindings>
        <CommandBinding Command="NavigationCommands.BrowseBack" CanExecute="BrowseBack_CanExecute" Executed="BrowseBack_Executed" />
        <CommandBinding Command="NavigationCommands.BrowseForward" CanExecute="BrowseForward_CanExecute" Executed="BrowseForward_Executed" />
        <CommandBinding Command="NavigationCommands.GoToPage" CanExecute="GoToPage_CanExecute" Executed="GoToPage_Executed" />
    </Window.CommandBindings>



   
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button x:Name="btnChangeColorScheme" Content="Change Colour Scheme" Click="btnChangeColorScheme_Click" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <Grid x:Name="RootGrid">
        <Grid.LayoutTransform>
            <ScaleTransform
                x:Name="mainScaleTransform"
                CenterX="0"
                CenterY="0"
                />
        </Grid.LayoutTransform>
        <Grid.Background>
            <ImageBrush ImageSource="/Data/Graphics/medicon.png" Opacity="0.1" />
        </Grid.Background>
        <TabControl>
            <TabItem Header="Games">
                <Grid x:Name="grdGameLibrary">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="0" />
                        <ColumnDefinition Width="0.9*" />
                        <ColumnDefinition Width="0.6*" Name="sidebarColumn" />
                    </Grid.ColumnDefinitions>
                    <!--<TextBlock FontSize="55" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">Left side</TextBlock>-->
                    <WrapPanel Orientation="Vertical" Grid.Column="0" Margin="0" x:FieldModifier="public" x:Name="wpGamesList">
                        <Button x:Name="btnClearFilters" HorizontalContentAlignment="Left" Background="{DynamicResource AccentColorBrush}" Click="btnClearFilters_Click">Clear All Filters</Button>
                        <RadioButton GroupName="flt" x:Name="btnShowAll" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnShowAll_Checked">Show All Games</RadioButton>
                        <RadioButton GroupName="flt" x:Name="btnFavorites" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnFavorites_Checked">Favorites</RadioButton>
                        <RadioButton GroupName="flt" x:Name="btnUnscraped" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnUnscraped_Checked">Unscraped Games</RadioButton>

                        <Border BorderBrush="White" BorderThickness="1,1,1,1" CornerRadius="2" Margin="0" Grid.Column="0">
                            <Expander IsExpanded="True" BorderThickness="0" Header="Roms">
                                <Expander.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Click="RemoveAllGames_Click" Header="Remove All Games From Database" />
                                    </ContextMenu>
                                </Expander.ContextMenu>
                                <StackPanel x:Name="spRomFilters">
                                    <RadioButton GroupName="flt" x:Name="btnNes" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnNes_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ScanRoms11" Click="ScanRoms_Click" Header="Rescan NES ROMs" />
                                                <MenuItem x:Name="ScrapeGames11" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) NES Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveRoms11" Click="RemoveRoms_Click" Header="Remove All NES ROMs from Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        NES
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnSnes" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnSnes_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ScanRoms12" Click="ScanRoms_Click" Header="Rescan SNES ROMs" />
                                                <MenuItem x:Name="ScrapeGames12" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) SNES Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveRoms12" Click="RemoveRoms_Click" Header="Remove All SNES ROMs from Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        SNES
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnSms" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnSms_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ScanRoms10" Click="ScanRoms_Click" Header="Rescan SMS ROMs" />
                                                <MenuItem x:Name="ScrapeGames10" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) SMS Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveRoms10" Click="RemoveRoms_Click" Header="Remove All SMS ROMs from Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        Master System
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnMd" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnMd_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ScanRoms4" Click="ScanRoms_Click" Header="Rescan MD ROMs" />
                                                <MenuItem x:Name="ScrapeGames4" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) MD Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveRoms4" Click="RemoveRoms_Click" Header="Remove All MD ROMs from Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        MegaDrive
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnPce" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnPce_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ScanRoms7" Click="ScanRoms_Click" Header="Rescan PCE ROMs"  />
                                                <MenuItem x:Name="ScrapeGames7" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) PCE Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveRoms7" Click="RemoveRoms_Click" Header="Remove All PCE ROMs from Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        PC-Engine
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnVb" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnVb_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ScanRoms14" Click="ScanRoms_Click" Header="Rescan VB ROMs" />
                                                <MenuItem x:Name="ScrapeGames14" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) VB Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveRoms14" Click="RemoveRoms_Click" Header="Remove All VB ROMs from Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        Virtual Boy
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnNgp" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnNgp_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ScanRoms6" Click="ScanRoms_Click" Header="Rescan NGP ROMs" />
                                                <MenuItem x:Name="ScrapeGames6" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) NGP Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveRoms6" Click="RemoveRoms_Click" Header="Remove All NGP ROMs from Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        NeoGeo Pocket
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnWswan" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnWswan_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ScanRoms15" Click="ScanRoms_Click" Header="Rescan WSWAN ROMs" />
                                                <MenuItem x:Name="ScrapeGames15" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) WSWAN Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveRoms15" Click="RemoveRoms_Click" Header="Remove All WSWAN ROMs from Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        WonderSwan
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnGb" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnGb_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ScanRoms1" Click="ScanRoms_Click" Header="Rescan GB ROMs" />
                                                <MenuItem x:Name="ScrapeGames1" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) GB Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveRoms1" Click="RemoveRoms_Click" Header="Remove All GB ROMs from Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        Gameboy Color
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnGba" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnGba_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ScanRoms2" Click="ScanRoms_Click" Header="Rescan GBA ROMs" />
                                                <MenuItem x:Name="ScrapeGames2" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) GBA Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveRoms2" Click="RemoveRoms_Click" Header="Remove All GBA ROMs from Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        Gameboy Advance
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnGg" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnGg_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ScanRoms5" Click="ScanRoms_Click" Header="Rescan GG ROMs" />
                                                <MenuItem x:Name="ScrapeGames5" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) GG Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveRoms5" Click="RemoveRoms_Click" Header="Remove All GG ROMs from Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        Game Gear
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnLynx" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnLynx_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ScanRoms3" Click="ScanRoms_Click" Header="Rescan LYNX ROMs" />
                                                <MenuItem x:Name="ScrapeGames3" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) LYNX Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveRoms3" Click="RemoveRoms_Click" Header="Remove All LYNX ROMs from Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        Atari Lynx
                                    </RadioButton>
                                </StackPanel>
                            </Expander>
                        </Border>

                        <Border BorderBrush="White" BorderThickness="1,1,1,1" CornerRadius="2" Margin="0" Grid.Column="0">
                            <Expander IsExpanded="True" BorderThickness="0" Header="Disks" >
                                <Expander.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Click="RemoveAllGames_Click" Header="Remove All Games From Database" />
                                    </ContextMenu>
                                </Expander.ContextMenu>
                                <StackPanel x:Name="spDiskFilters">
                                    <RadioButton GroupName="flt" x:Name="btnSs" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnSs_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ManualAddGame13" Click="ManualAddGame_Click" Header="Manually Import a Saturn Game"  />
                                                <MenuItem x:Name="ScanDisks13" Click="ScanDisks_Click" Header="Rescan SS Disks"  />
                                                <MenuItem x:Name="ScrapeGames13" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) SS Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveDisks13" Click="RemoveDisks_Click" Header="Remove All SS Games From Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        Saturn
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnPsx" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnPsx_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ManualAddGame9" Click="ManualAddGame_Click" Header="Manually Import a PSX Game"  />
                                                <MenuItem x:Name="ScanDisks9" Click="ScanDisks_Click" Header="Rescan PSX Disks" />
                                                <MenuItem x:Name="ScrapeGames9" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) PSX Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveDisks9" Click="RemoveDisks_Click" Header="Remove All PSX Games From Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        Playstation
                                    </RadioButton>

                                    <RadioButton GroupName="flt" x:Name="btnPcecd" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnPcecd_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ManualAddGame18" Click="ManualAddGame_Click" Header="Manually Import a PCE Game"  />
                                                <MenuItem x:Name="ScanDisks18" Click="ScanDisks_Click" Header="Rescan PCE Disks"  />
                                                <MenuItem x:Name="ScrapeGames18" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) PCE Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveDisks18" Click="RemoveDisks_Click" Header="Remove All PCE(CD) Games From Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        PC-Engine (CD)
                                    </RadioButton>
                                    <RadioButton GroupName="flt" x:Name="btnPcfx" HorizontalContentAlignment="Left" Style="{StaticResource {x:Type ToggleButton}}" Checked="btnPcfx_Checked">
                                        <RadioButton.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem x:Name="ManualAddGame8" Click="ManualAddGame_Click" Header="Manually Import a PC-FX Game"  />
                                                <MenuItem x:Name="ScanDisks8" Click="ScanDisks_Click" Header="Rescan PCFX Disks"  />
                                                <MenuItem x:Name="ScrapeGames8" Click="ScrapeGames_Click" Header="Scrape (previously unscraped) PCFX Game Info" />
                                                <Separator />
                                                <MenuItem x:Name="RemoveDisks8" Click="RemoveDisks_Click" Header="Remove All PCFX Games From Database" />
                                            </ContextMenu>
                                        </RadioButton.ContextMenu>
                                        PC-FX
                                    </RadioButton>
                                </StackPanel>
                            </Expander>
                        </Border>
                        <Border BorderBrush="White" BorderThickness="1,1,1,1" CornerRadius="2" Margin="0" Grid.Column="0">
                            <Expander IsExpanded="True" BorderThickness="0" Header="Scanning" >
                                <StackPanel x:Name="spScanning">
                                    <Button x:Name="btnRescanRoms" HorizontalContentAlignment="Left" Background="{DynamicResource AccentColorBrush}" Click="RescanRoms">Rescan All Roms</Button>
                                    <Button x:Name="btnRescanDisks" HorizontalContentAlignment="Left" Background="{DynamicResource AccentColorBrush}" Click="RescanDisks">Rescan All Disks</Button>
                                </StackPanel>
                            </Expander>
                        </Border>
<!--
                        <Border BorderBrush="White" BorderThickness="1,1,1,1" CornerRadius="2" Margin="0" Grid.Column="0">
                            <Expander IsExpanded="True" BorderThickness="0" Header="Misc" >
                                <StackPanel x:Name="spGlobalSettings">
                                    
                                    <CheckBox x:Name="chkEnableNetplay" Checked="chkEnableNetplay_Checked" Unchecked="chkEnableNetplay_Unchecked">Enable Netplay</CheckBox>
                                    
                                    
                                   <CheckBox x:Name="chkFullScreen" Checked="chkFullScreen_Checked" Unchecked="chkFullScreen_Unchecked">Play Fullscreen</CheckBox> 
                                    
                            <CheckBox x:Name="chkBypassConfig" Checked="chkBypassConfig_Checked" Unchecked="chkBypassConfig_Unchecked">
                                <AccessText TextWrapping="Wrap"  
              Text="Bypass Launcher Config"/>
                            </CheckBox>
                           
                                </StackPanel>
                            </Expander>
                        </Border>
                         -->

                    </WrapPanel>
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
                    <!--<TextBlock Grid.Column="2" FontSize="55" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">Right side</TextBlock> -->

                    <Grid Margin="10" Grid.Column="2">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25" />
                                <RowDefinition Height="1" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0" x:Name="tbFilterDatagrid" Text="" TextChanged="tbFilterDatagrid_TextChanged" Controls:TextBoxHelper.ClearTextButton="True" 
                                     Controls:TextBoxHelper.Watermark="Dynamic Search" />
                            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" />

                            <DataGrid PreviewMouseRightButtonDown="DataGrid_PreviewMouseRightButtonDown" PreviewMouseRightButtonUp="DataGrid_PreviewMouseRightButtonDown" 
                                      RowBackground="Transparent" Background="Transparent" MouseDoubleClick="LaunchRom_Click" Grid.Row="2" Name="dgGameList" IsReadOnly="True" 
                                      SelectionChanged="dgGameList_SelectionChanged" SelectionMode="Single" ContextMenuOpening="dgGameList_ContextMenuOpening" AutoGenerateColumns="True"
                                      ItemsSource="{Binding FilteredSet, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" DataContext="{Binding Source={x:Static Application.Current}, Path=GamesList}" 
                                      IsSynchronizedWithCurrentItem="True">
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource AccentColorBrush}" />
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="Height" Value="20" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="VerticalContentAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.ContextMenu>
                                    <ContextMenu x:Name="dgContext">
                                        <MenuItem x:Name="LaunchRom" Header="Play Game" Click="LaunchRom_Click" />
                                        <MenuItem Header="Favorites" Click="MenuItemFavorite_Click" />
                                        <MenuItem Header="Copy Launch String to Clipboard" Click="CopyLaunchStringToClipboard_Click" />
                                        <MenuItem Header="Identify and Scrape Game" Click="btnScrapingPickGame_Click" />
                                        <MenuItem x:Name="DeleteRom" Header="Delete From Games Library" Click="DeleteRom_Click" />
                                    </ContextMenu>
                                </DataGrid.ContextMenu>

                                <DataGrid.Columns>
                                    
                                </DataGrid.Columns>
                                
                                
                            </DataGrid>
                        </Grid>


                    </Grid>

                    
                        <Grid x:Name="grdGamesSidebar" Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"  />

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <ScrollViewer x:Name="srcSidebar" Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" MinWidth="150" Width="{Binding ElementName=grdGamesSidebar, Path=ActualWidth}" Height="{Binding ElementName=grdGamesSidebar, Path=ActualHeight}">
                                <WrapPanel  Orientation="Horizontal" x:Name="SidebarWrapPanel">

                                <Border x:Name="brdSidebarGame" BorderBrush="White" BorderThickness="1,1,1,1" CornerRadius="2" Margin="0" Grid.Column="0"  Width="{Binding ElementName=SidebarWrapPanel, Path=ActualWidth}">
                                    <Expander x:Name="expGameInfo" BorderThickness="0" Header="Game Stats">
                                        <StackPanel x:Name="spSidebarGame">
                                            <Grid Margin="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />

                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>

                                                <Label Grid.Column="0" Grid.Row="0" FontSize="10" Padding="2" FontWeight="Medium">Game:</Label>
                                                <Label x:Name="lblGameName" Grid.Column="1" Grid.Row="0"  FontSize="10" Padding="2" FontWeight="Medium">
                                                    <Label.Content>
                                                        <AccessText TextWrapping="Wrap" />
                                                    </Label.Content>
                                                </Label>

                                                <Label Grid.Column="0" Grid.Row="1"  FontSize="10" Padding="2" FontWeight="Medium">Is Favorite:</Label>
                                                <Label x:Name="lblIsFavorite" Grid.Column="1" Grid.Row="1" FontSize="10" Padding="2" FontWeight="Medium" >
                                                    <Label.Content>
                                                        <AccessText TextWrapping="Wrap" />
                                                    </Label.Content>
                                                </Label>

                                                <Label Grid.Column="0" Grid.Row="2" FontSize="10" Padding="2" FontWeight="Medium">Last Launched:</Label>
                                                <Label x:Name="lblLastLaunched" Grid.Column="1" Grid.Row="2"  FontSize="10" Padding="2" FontWeight="Medium">
                                                    <Label.Content>
                                                        <AccessText TextWrapping="Wrap" />
                                                    </Label.Content>
                                                </Label>

                                                <Label Grid.Column="0" Grid.Row="3" FontSize="10" Padding="2" FontWeight="Medium">Last Session Length:</Label>
                                                <Label x:Name="lblSessionLength" Grid.Column="1" Grid.Row="3"  FontSize="10" Padding="2" FontWeight="Medium">
                                                    <Label.Content>
                                                        <AccessText TextWrapping="Wrap" />
                                                    </Label.Content>
                                                </Label>

                                                <Label Grid.Column="0" Grid.Row="4" FontSize="10" Padding="2" FontWeight="Medium">Times Played:</Label>
                                                <Label x:Name="lblTimesPlayed" Grid.Column="1" Grid.Row="4"  FontSize="10" Padding="2" FontWeight="Medium">
                                                    <Label.Content>
                                                        <AccessText TextWrapping="Wrap" />
                                                    </Label.Content>
                                                </Label>

                                                <Label Grid.Column="0" Grid.Row="5" FontSize="10" Padding="2" FontWeight="Medium">Total Time In-Game:</Label>
                                                <Label x:Name="lblTotalTime" Grid.Column="1" Grid.Row="5" FontSize="10" Padding="2" FontWeight="Medium" >
                                                    <Label.Content>
                                                        <AccessText TextWrapping="Wrap" />
                                                    </Label.Content>
                                                </Label>


                                            </Grid>
                                        </StackPanel>
                                    </Expander>
                                </Border>

                                <Border x:Name="brdSidebarGameInformation" BorderBrush="White" BorderThickness="1,1,1,1" CornerRadius="2" Margin="0" Grid.Column="0"  Width="{Binding ElementName=SidebarWrapPanel, Path=ActualWidth}">
                                    <Expander x:Name="expGameInformation" IsExpanded="True" BorderThickness="0" Header="Game Info" >
                                        <StackPanel x:Name="spSidebarGameInformation">
                                            <Grid Margin="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="0.5*" Name="gameImageColumn" />
                                                    <ColumnDefinition Width="0.5*" />

                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>

                                                <Image x:Name="imgBanner" Grid.Column="0" Grid.Row="0" Margin="5" Grid.ColumnSpan="2">
                                                    <Image.ToolTip>
